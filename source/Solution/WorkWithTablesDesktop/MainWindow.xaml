<Window x:Class="WorkWithTablesDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkWithTablesDesktop"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="700"
        Width="1100"
        FontSize='18'>
  <Grid>
    <TabControl>
      <TabItem Header='Table'>
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width='300' />
            
            <ColumnDefinition Width='1*' />
          </Grid.ColumnDefinitions>
          <Border BorderThickness='1'
                  BorderBrush='Gray'
                  Margin='20,20,20,20'>
          <StackPanel Margin='20' >
            <Button Content='Refresh Table Names'
                    VerticalAlignment='Top'
                    Click='RefreshTableNamesButton_Click' />
            <TextBlock Text='Enter new table name:'
                       Margin='0,30,0,3' />
            <TextBox Text='AnnualSales'
                     Margin='0,0,0,020'
                     x:Name='NewTableTextbox' />
            <Button Content='Add Table'
                    x:Name='AddTableButton'
                    Click='AddTableButton_Click' />
          </StackPanel>
          </Border>
          <StackPanel Grid.Column='2'
                      Margin='20,20,20,20'>
            <TextBlock Text='Existing Tables:' />
            <ListBox x:Name='tableListBox'
                     MinHeight='300'>
              <ListBox.ItemTemplate>
                <DataTemplate>
                  <TextBlock Text='{Binding Name}' />
                </DataTemplate>
              </ListBox.ItemTemplate>
            </ListBox>
          </StackPanel>
        </Grid>
      </TabItem>
      <TabItem Header='Query Data'>
        <StackPanel Margin='20'>
          <Button Margin='0,10'
                  Content='Get Rows with Pageable&lt;T&gt;...'
                  x:Name='RefreshRowsButton'
                  Click='RefreshRowsButton_Click' />

          <ListBox x:Name='ReadTableListBox'
                   MinHeight='400'>

          </ListBox>
        </StackPanel>
      </TabItem>
      <TabItem Header='Query Data With Model'>
        <StackPanel Margin='20'>
          <Button Margin='0,10'
                  Content='Get Rows with Pageable&lt;T&gt; and TradingCardEntity...'
                  x:Name='RefreshRowsModelButton'
                  Click='RefreshRowsModelButton_Click' />
          <DataGrid x:Name='CardsDataGrid1'
                    AutoGenerateColumns='True'
                    AutoGeneratedColumns='CardsDataGrid_AutoGeneratedColumns' FontSize='15'></DataGrid>
