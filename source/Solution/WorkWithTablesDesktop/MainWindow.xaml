        </StackPanel>
      </TabItem>
      <TabItem Header='Edit'
               Loaded='TabItem_Loaded'>
        <StackPanel Margin=' 20'>
          <Button Content='Add Card'
                  x:Name='AddCardButton'
                  Click='AddCardButton_Click'
                  Margin='5' />

          <Button Content='Update Card'
                  x:Name='UpdateCardButton'
                  Click='UpdateCardButton_Click'
                  Margin='5' />
          <Button Content='Delete Card'
                  x:Name='DeleteCardButton'
                  Click='DeleteCardButton_Click'
                  Margin='5' />
          <ListBox x:Name='ShowRowsListBox'
                   MinHeight='400'>
            <ListBox.ItemTemplate>
              <DataTemplate>
                <StackPanel Orientation='Horizontal'>
                  <TextBlock Text='{Binding RowKey}'  MinWidth='120'/>
                  <TextBlock Text='{Binding BidPrice, StringFormat=c}'
                             Margin='20,0,0,0' />
                </StackPanel>
              </DataTemplate>
            </ListBox.ItemTemplate>

          </ListBox>
        </StackPanel>
      </TabItem>
      <TabItem Header='Single Entity'>
        <StackPanel>
          <Button Content='Get Single Item'
                  x:Name='GetSingleItemButton'
                  Click='GetSingleItemButton_Click' />
          <TextBlock x:Name='SingleItemTextBlock' />
        </StackPanel>
      </TabItem>
      <TabItem Header='Batch Transactions'>
        <StackPanel>
          <Button Content='Batch Transactions...'
                  x:Name='BatchTransactionsButton' Click='BatchTransactionsButton_Click'/>
          <DataGrid x:Name='CardsDataGrid' AutoGenerateColumns='True'
                    AutoGeneratedColumns='CardsDataGrid_AutoGeneratedColumns'></DataGrid>
        </StackPanel>
      </TabItem>
    </TabControl>
  </Grid>
